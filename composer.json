{
    "name": "beastbytes/postal-code-validator",
    "type": "library",
    "description": "Postal code validator",
    "keywords": [
        "postal code",
        "validator"
    ],
    "support": {
        "issues": "https://github.com/beastbytes/postal-code-validator/issues",
        "source": "https://github.com/beastbytes/postal-code-validator"
    },
    "license": "BSD-3-Clause",
    "authors": [{
        "name": "Chris Yates",
        "email": "chris.l.yates@gmail.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "yiisoft/validator": "^2.0"
    },
    "require-dev": {
        "beastbytes/postal-code-data-php": "^1.0",
        "phpunit/phpunit": "^10.0",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "BeastBytes\\PostalCode\\Validator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeastBytes\\PostalCode\\Validator\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
